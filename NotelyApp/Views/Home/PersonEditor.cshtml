
@model PersonModel

@{

    @if (Model != null && Model.Id != Guid.Empty)
    {
        ViewData["Title"] = "Edit Person";

    }
    else
    {
        ViewData["Title"] = "Add Person";
    }
    
}


<div class="note-editor">
    <div class="panel panel-default note-editor__panel">
        <div class="panel-heading note-editor__header">
            <h1 class="panel-title note-editor__panel-title">
                @if (Model != null && Model.Id != Guid.Empty)
                {
                    <span>Edit Person</span>
                }
                else
                {
                    <span>Add Person</span>
                }
            </h1>
        </div>
        <form asp-action="PersonEditor" method="post">
            <div class="panel-body note-editor__panel-body">

                <div asp-validation-summary="All"></div>
          
                <div class="form-group">
                    <label class="note-editor__input-label" asp-for="FirstName">FirstName: <span class="text-danger">*</span></label>
                    <input class="form-control note-editor__subject-input" asp-for="FirstName" />
                </div>
                <div class="form-group">
                    <label class="note-editor__input-label" asp-for="LastName">LastName: </label>
                    <input class="form-control note-editor__subject-input" asp-for="LastName" />
                </div>

                <div class="form-group">
                    <label class="note-editor__input-label" asp-for="CityOfResidence">City of Residency</label>
                    <input class="form-control note-editor__subject-input" asp-for="CityOfResidence" />
                </div>

                <div class="form-group">
                    <label class="note-editor__input-label" asp-for="LastKnownLocation">LastKnownLocation</label>
                    <input class="form-control note-editor__subject-input" asp-for="LastKnownLocation" />
                </div>
                <div class="form-group">
                    <label class="note-editor__input-label" asp-for="Detail">Additional Information</label>
                    <textarea class="form-control note-editor__detail-input" asp-for="Detail" id="TextArea" rows="12" cols="20"></textarea>
                </div>
                
            </div>

            <div class="panel-footer">
                <div class="note-editor__flex-container">
                    @if (Model != null && Model.Id != Guid.Empty)
                    {
                        <a class="btn btn-sm note-editor__button" asp-action="PersonDetail" asp-route-id="@Model.Id">Cancel</a>
                    }
                    else
                    {
                        <a class="btn btn-sm note-editor__button" asp-action="Index">Cancel</a>
                    }

                    <button class="btn btn-sm note-editor__button" type="submit">Save Note</button>
                </div>
            </div>
        </form>
    </div>
</div>
